<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">

        <!-- Insert your shape here: -->
        <shape android:shape="rectangle">

            <solid android:color="#ecf0f3" />

            <corners android:radius="30dp" />

            <stroke
                android:width="2dp"
                android:color="#535AE5" />

            <size
                android:width="250dp"
                android:height="250dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

        </shape>

    </item>
</layer-list>
