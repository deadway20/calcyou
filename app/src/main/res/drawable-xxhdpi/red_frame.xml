<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:top="2dp">

        <!-- Insert your shape here: -->
        <shape  android:shape="rectangle">

            <solid
                android:color="@color/bg_color"/>

            <corners
                android:radius="30dp"/>

            <stroke
                android:color="@color/red"
                android:width="2dp"/>

            <size
                android:width="250dp"
                android:height="250dp" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

        </shape>

    </item>
</layer-list>
