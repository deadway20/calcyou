<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="color">#FFFFFF</item>
    </style>
    <style name="btnStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/pink_theme</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textStyle">bold</item>
<!--        <item name="android:layout_weight">1</item>-->
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginEnd">7dp</item>
    </style>
    <style name="colorBtn">
        <item name="android:layout_width">25dp</item>
       <item name="android:layout_height">25dp</item>
    </style>
    <style name="blueStyle" parent="@android:style/Widget.Button">
        <item name="android:buttonStyle">@style/btnStyle</item>
        <item name="android:background">@drawable/blue_theme</item>
    </style>
    <style name="darkStyle" parent="@android:style/Widget.Button">
        <item name="android:buttonStyle">@style/btnStyle</item>
        <item name="android:background">@drawable/dark_theme</item>
    </style>
    <style name="greenStyle" parent="@android:style/Widget.Button">
        <item name="android:buttonStyle">@style/btnStyle</item>
        <item name="android:background">@drawable/green_theme</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="pinkStyle" parent="@android:style/Widget.Button">
        <item name="android:buttonStyle">@style/btnStyle</item>
        <item name="android:background">@drawable/pink_theme</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="velvetStyle" parent="@android:style/Widget.Button">
        <item name="android:buttonStyle">@style/btnStyle</item>
        <item name="android:background">@drawable/velvet_theme</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>
